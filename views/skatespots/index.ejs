<%- include('../partials/header') %> 


 
<h2>Skatespot List</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Rating</th>
      
      <!-- <th>Now Showing</th> -->
    </tr>
</thead>
<tbody>
   
    <% skatespots.forEach(function(s) { %>
        <tr>
            <a href="/skatespots/<%= s.id %>"
                <%= s.skatespot %>
            </a>
            <td><%= s.title %></td>
            <td><%= s.location %></td>
            <td><%= s.rating %></td>
            
            <td><a href="/skatespots/<%= s._id %>">Reviews</a></td>
            <form action="/skatespots/<%= s.id %>?_method=DELETE"
                class="delete-form" method="POST">
                <td><button type="submit">X</button></td>
            </form>
            <td><a href="/skatespots/<%= s._id %>/edit">Edit Spot</a></td>
        </tr>
        <% }); %>
     
    </tbody> 
</table> 




<a href="/skatespots/new">New Spot</a>
