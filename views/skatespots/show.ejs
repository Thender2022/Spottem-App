<%- include('../partials/header') %>

<section id="show-page">
    <div>Title: </div>
    <div><%= skatespot.title %></div>
    <div>Location: </div>
    <div><%= skatespot.location %></div>
    <div>Rating: </div>
    <div><%= skatespot.rating %></div>
</section>  
<br><br><h2>Reviews</h2>

    <form id="add-review-form" method="POST"
        action="/skatespots/<%= skatespot._id %>/reviews">
        <label>Review:</label>
        <textarea name="content"></textarea>
        <label>Rating:</label>
        <select name="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5" selected>5</option>
        </select>
        <input type="submit" value="Add Review">
    </form>


<% if (skatespot.reviews.length) { %>
    <% skatespot.reviews.forEach(function(r) { %>
        <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" /><%= r.userName %></td>
        <td><%= r.createdAt.toLocaleDateString() %></td>
        <td><%= r.content %></td>
        <td><%= r.rating %></td>
<form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
    <button type="submit">DELETE</button>
</form>
      <% }); %>
   
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>

<%- include('../partials/footer') %>






