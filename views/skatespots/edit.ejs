<%- include('../partials/header') %>
<h1>Edit Spot</h1>
<h2>Enter a New Skatespot</h2>
<form action ="/skatespots/<%= skatespot.id %>?_method=PUT" method="POST">
    <label>Title:
        <input type="text" value="<%= skatespot.title %>" name="title">
    </label><br>
    <label>Location:
        <input type="text" value="<%= skatespot.location %>" name="location">
    </label><br>
    <label>Rating:
        <select name="rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </label><br>
    <button type="submit">Edit Skatespot</button>
</form>

